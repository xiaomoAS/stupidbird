{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "rootDirs": ["src"],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      // "@assets":["src/assets"],
      // "@views":["src/views"],
      // "@pages":["src/pages"],
      // "@framework":["src/framework"],
      // "@components":["src/components"],
      // "@styles":["src/styles"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    // "src/**/*.vue",
    // "tests/**/*.ts",
    // "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/mock",
    "src/reportWebVitals.ts",
    "src/App.test.tsx",
  ]
}
